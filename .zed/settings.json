{
  "languages": {
    "Go": {
      "tab_size": 4,
      "hard_tabs": true,
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "gofmt",
          "arguments": []
        }
      }
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "staticcheck": true,
        "analyses": {
          "unusedparams": true,
          "shadow": true
        },
        "codelenses": {
          "gc_details": false,
          "generate": true,
          "regenerate_cgo": true,
          "test": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        }
      }
    }
  },
  "debug": {
    "adapter": "dlv",
    "configurations": [
      {
        "type": "go",
        "request": "launch",
        "name": "Debug KYC DSL",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/kycctl",
        "args": ["sample_case.dsl"],
        "showLog": true,
        "logOutput": "debugger"
      },
      {
        "type": "go",
        "request": "launch",
        "name": "Debug Parser Tests",
        "mode": "test",
        "program": "${workspaceFolder}/internal/parser",
        "showLog": true
      },
      {
        "type": "go",
        "request": "attach",
        "name": "Attach to Process",
        "mode": "local",
        "processId": 0
      }
    ]
  },
  "terminal": {
    "env": {
      "PGHOST": "localhost",
      "PGPORT": "5432",
      "PGDATABASE": "kyc_dsl"
    }
  }
}
